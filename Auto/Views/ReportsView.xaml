<UserControl x:Class="Auto.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
            <TextBlock Text="Отчеты" FontSize="22" FontWeight="SemiBold" Foreground="#0E1E2E"/>
            <TextBlock Text="Период, мес." VerticalAlignment="Center" Margin="12 0 4 0"/>
            <TextBox Text="{Binding Months}" Width="50" Margin="0 0 8 0" Height="18"/>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="0" Margin="0 0 12 0" Background="White" Padding="12" CornerRadius="10" BorderBrush="#E7ECF2" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Продажи по месяцам" FontWeight="SemiBold" FontSize="16"/>
                <DataGrid ItemsSource="{Binding MonthlySales}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="0 6 0 0" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Period}" Header="Месяц" Width="*"/>
                        <DataGridTextColumn Binding="{Binding CarsSold}" Header="Авто" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Revenue, StringFormat='{}{0:N0} ₽'}" Header="Выручка" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Background="White" Padding="12" CornerRadius="10" BorderBrush="#E7ECF2" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="ТОП моделей" FontWeight="SemiBold" FontSize="16"/>
                <DataGrid ItemsSource="{Binding ModelSales}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="0 6 0 10" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Model}" Header="Модель" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Sold}" Header="Продано" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Revenue, StringFormat='{}{0:N0} ₽'}" Header="Выручка" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Text="Ближайшие тест-драйвы (30 дней)" FontWeight="SemiBold" FontSize="14"/>
                <ItemsControl ItemsSource="{Binding UpcomingTestDrives}" Margin="0 6 0 0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E7ECF2" BorderThickness="0 0 0 1" Padding="6 8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Slot, StringFormat='{}{0:dd.MM HH:mm}'}" Width="110" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding Car}" Width="180" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding Customer}" Width="160" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding Phone}" Width="130"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
