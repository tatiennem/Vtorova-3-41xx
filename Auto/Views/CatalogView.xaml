<UserControl x:Class="Auto.Views.CatalogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Фильтры сверху -->
            <RowDefinition Height="2*"/>
            <!-- Список автомобилей -->
            <RowDefinition Height="Auto"/>
            <!-- Фильтр продаж по дате -->
            <RowDefinition Height="*"/>
            <!-- Недавние продажи -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <!-- Левый столбец: список авто -->
            <ColumnDefinition Width="1.3*"/>
            <!-- Правый столбец: детали -->
        </Grid.ColumnDefinitions>

        <!-- Filters - ВЕРХ -->
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0 0 0 12" VerticalAlignment="Center">
            <TextBlock Text="Каталог автомобилей" FontSize="24" FontWeight="SemiBold" Foreground="#0E1E2E" />
            <ComboBox ItemsSource="{Binding ModelFilters}" SelectedItem="{Binding ModelFilter}" Width="160" Margin="20 0 0 0" Height="22"/>
            <CheckBox Content="Только в наличии" IsChecked="{Binding OnlyAvailable}" VerticalAlignment="Center" Margin="12 0 0 0"/>
        </StackPanel>

        <!-- Cars list - ЛЕВАЯ ЧАСТЬ, РЯД 1 -->
        <ListBox Grid.Row="1" Grid.Column="0"
                 ItemsSource="{Binding Cars}"
                 SelectedItem="{Binding SelectedCar}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Background="Transparent"
                 BorderThickness="0"
                 Margin="0 0 12 0">
            
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Width="220" Height="200" Margin="6" Padding="8" CornerRadius="12" Background="White" BorderBrush="#E7ECF2" BorderThickness="1" >
                        <StackPanel>
                            <Image Height="95" Stretch="UniformToFill" Source="{Binding Image, Converter={StaticResource ByteArrayToImageConverter}}" />
                            <TextBlock Text="{Binding Model}" FontWeight="SemiBold" FontSize="16" Margin="0 8 0 0"/>
                            <TextBlock Text="{Binding Trim}" Foreground="#5A6A7A" />
                            <TextBlock Text="{Binding Color}" Foreground="#5A6A7A" />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 6 0 0">
                                <Ellipse Width="8" Height="8" Fill="{Binding InStock, Converter={StaticResource BooleanToBrushConverter}}" />
                                <TextBlock Text="{Binding InStock, Converter={StaticResource StockStatusConverter}}" Margin="6 0 0 0" Foreground="#3E4A59"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Details and sale - ПРАВАЯ ЧАСТЬ, РЯД 1 -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="White" 
                CornerRadius="12" 
                Padding="16" 
                BorderBrush="#E7ECF2" 
                BorderThickness="1"
                VerticalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Характеристики" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding SelectedCar.Model}" FontWeight="Bold" FontSize="16" Margin="0 8 0 2"/>
                    <TextBlock Text="{Binding SelectedCar.Trim}" Foreground="#536273"/>
                    <TextBlock Text="{Binding SelectedCar.Engine}" Foreground="#536273"/>
                    <TextBlock Text="{Binding SelectedCar.Transmission}" Foreground="#536273"/>
                    <TextBlock Text="{Binding SelectedCar.Color}" Foreground="#536273"/>
                    <Separator Margin="0 10 0 10"/>

                    <StackPanel Margin="0 0 0 8">
                        <TextBlock Text="Дополнительные услуги" FontWeight="SemiBold" Margin="0 0 0 4"/>

                        <Border BorderBrush="#E7ECF2" BorderThickness="1" CornerRadius="4" Padding="4" MaxHeight="120">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox ItemsSource="{Binding ExtraServices}" 
                     BorderThickness="0"
                     Background="Transparent"
                     SelectionMode="Multiple"
                     HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                      Margin="0 0 8 0"
                                      VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Service.Name}" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Service.Price, StringFormat=' ({0:N0} ₽)'}" 
                                      Foreground="#5F7184" 
                                      Margin="8 0 0 0"
                                      VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>

                        <TextBlock Text="{Binding ExtrasTotal, StringFormat='Сумма доп. услуг: {0:N0} ₽'}" 
              Foreground="#536273" 
              FontWeight="SemiBold"
              Margin="0 4 0 0"/>
                    </StackPanel>

                    <TextBlock Text="Скидка, %" FontWeight="SemiBold"/>
                    <Slider Minimum="0" Maximum="20" Value="{Binding DiscountPercent}" TickFrequency="1" IsSnapToTickEnabled="True" />
                    <TextBlock Text="{Binding DiscountPercent, StringFormat='Текущая скидка: {0}%'}" Foreground="#536273" Margin="0 0 0 6"/>

                    <StackPanel Orientation="Vertical" Margin="0 4 0 8">
                        <TextBlock Text="{Binding BasePrice, StringFormat='Базовая цена: {0:N0} ₽'}" />
                        <TextBlock Text="{Binding ExtrasTotal, StringFormat='Доп. услуги: {0:N0} ₽'}" />
                        <TextBlock Text="{Binding FinalPrice, StringFormat='Итого: {0:N0} ₽'}" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>

                    <Separator/>
                    <TextBlock Text="Покупатель" FontWeight="SemiBold" Margin="0 6 0 4"/>
                    <StackPanel Orientation="Vertical" Margin="0 2 0 0">
                        <ComboBox ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  DisplayMemberPath="FullName"
                                  Margin="0 0 0 6"/>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                            <Button Content="Новый клиент" Command="{Binding NewCustomerCommand}" Padding="10 6" />
                        </StackPanel>
                        <TextBlock Text="ФИО" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding CustomerName}" Margin="0 0 0 6" />
                        <TextBlock Text="Телефон" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding CustomerPhone}" Margin="0 0 0 6" />
                        <TextBlock Text="Email" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding CustomerEmail}" />
                    </StackPanel>
                    <!-- Кнопка оформления продажи -->
                    <Grid Margin="0 12 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" 
                                Content="Оформить продажу" 
                                Command="{Binding PurchaseCommand}" 
                                Padding="12 8" 
                                Background="#244566" 
                                Foreground="White" 
                                Height="40"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Width="200"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                BorderThickness="0"
                                BorderBrush="Transparent">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1F3B57"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0E1E2E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Панель фильтрации по дате - РЯД 2, обе колонки -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                Background="#F3F4F6" 
                CornerRadius="6" 
                Padding="8" 
                Margin="0,12,0,8">
            <StackPanel>
                <TextBlock Text="Фильтр продаж по дате" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding StartDateFilter, Mode=TwoWay}" 
                                Width="120" Margin="0,0,5,0"
                                VerticalAlignment="Center"/>
                    <TextBlock Text="—" VerticalAlignment="Center" Margin="2,0,2,0"/>
                    <DatePicker SelectedDate="{Binding EndDateFilter, Mode=TwoWay}" 
                                Width="120" Margin="5,0,10,0"
                                VerticalAlignment="Center"/>
                    <Button Command="{Binding ApplyDateFilterCommand}" 
                            Content="Применить"
                            Margin="5,0" Padding="8,4"
                            Background="#4F46E5" Foreground="White"/>
                    <Button Command="{Binding ClearDateFilterCommand}" 
                            Content="Сбросить"
                            Margin="5,0" Padding="8,4"
                            Background="#E5E7EB"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Recent sales - РЯД 3, обе колонки -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" 
                Background="White" 
                CornerRadius="12" 
                Padding="12" 
                BorderBrush="#E7ECF2" 
                BorderThickness="1" 
                Margin="0 0 0 0"
                MaxHeight="200">
            <StackPanel>
                <TextBlock Text="Продажи" FontWeight="SemiBold" FontSize="16" Margin="0 0 0 5"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                    <ItemsControl ItemsSource="{Binding FilteredRecentSales}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0 4">
                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:dd.MM}'}" Width="70" Margin="0 0 10 0"/>
                                    <TextBlock Text="{Binding Car}" Width="240" Margin="0 0 10 0"/>
                                    <TextBlock Text="{Binding Customer}" Width="180" Margin="0 0 10 0"/>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:N0} ₽'}" FontWeight="Bold" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>