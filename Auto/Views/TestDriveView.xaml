<UserControl x:Class="Auto.Views.TestDriveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.1*"/>
            <ColumnDefinition Width="1.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Запись на тест-драйв" FontSize="22" FontWeight="SemiBold" Foreground="#0E1E2E" Grid.ColumnSpan="2" Margin="0 0 0 10"/>

        <Border Grid.Row="1" Grid.Column="0" Background="White" Padding="14" CornerRadius="12" BorderBrush="#E7ECF2" BorderThickness="1" Margin="0 0 12 0">
            <StackPanel>
                <TextBlock Text="Автомобиль" FontWeight="SemiBold"/>
                <ComboBox Margin="0 4 0 8">
                    <ComboBoxItem>
                        <StackPanel>
                            <TextBlock Text="Toyota Camry" FontWeight="SemiBold"/>
                            <TextBlock Text="Комфорт" Foreground="#5A6A7A"/>
                            <TextBlock Text="Черный" Foreground="#5A6A7A"/>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel>
                            <TextBlock Text="Toyota RAV4" FontWeight="SemiBold"/>
                            <TextBlock Text="Престиж" Foreground="#5A6A7A"/>
                            <TextBlock Text="Белый" Foreground="#5A6A7A"/>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Дата" FontWeight="SemiBold"/>
                <DatePicker Margin="0 4 0 8"/>

                <TextBlock Text="Время (чч:мм)" FontWeight="SemiBold"/>
                <TextBox Text="14:00" Margin="0 4 0 8"/>

                <TextBlock Text="Клиент" FontWeight="SemiBold"/>
                <ComboBox Margin="0 2 0 6">
                    <ComboBoxItem Content="Второв Алексей Владимирович"/>
                    <ComboBoxItem Content="Второва Татьяна Александровна"/>
                </ComboBox>
                <Button Content="Новый клиент" Padding="10 6" Margin="0 0 0 8"/>
                <TextBlock Text="ФИО" FontWeight="SemiBold"/>
                <TextBox Margin="0 2 0 6"/>
                <TextBlock Text="Телефон" FontWeight="SemiBold"/>
                <TextBox Text="+7 (999) 123-45-67" Margin="0 2 0 6"/>
                <TextBlock Text="Email" FontWeight="SemiBold"/>
                <TextBox Text="client@example.com" Margin="0 2 0 8"/>

                <TextBlock Text="Комментарий" FontWeight="SemiBold"/>
                <TextBox AcceptsReturn="True" Height="60" TextWrapping="Wrap" Margin="0 4 0 10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                    <Button Content="Записать клиента" Padding="12 6" Background="#244566" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Background="White" Padding="14" CornerRadius="12" BorderBrush="#E7ECF2" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Ближайшие тест-драйвы" FontWeight="SemiBold" FontSize="16" />
                </StackPanel>
                <StackPanel Margin="0 6 0 0">
                    
                    <Border BorderBrush="#E7ECF2" BorderThickness="0 0 0 1" Padding="6 8">
                        <StackPanel>
                            <TextBlock Text="15.01 14:00" FontWeight="Bold"/>
                            <TextBlock Text="Toyota Camry - Комфорт" />
                            <TextBlock Text="Второв Алексей" Foreground="#4D5A6A"/>
                            <TextBlock Text="+7 (999) 123-45-67" Foreground="#4D5A6A"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="#E7ECF2" BorderThickness="0 0 0 1" Padding="6 8">
                        <StackPanel>
                            <TextBlock Text="16.01 11:30" FontWeight="Bold"/>
                            <TextBlock Text="Toyota RAV4 - Престиж" />
                            <TextBlock Text="Второва Татьяна" Foreground="#4D5A6A"/>
                            <TextBlock Text="+7 (999) 765-43-21" Foreground="#4D5A6A"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="#E7ECF2" BorderThickness="0 0 0 1" Padding="6 8">
                        <StackPanel>
                            <TextBlock Text="17.01 16:00" FontWeight="Bold"/>
                            <TextBlock Text="Toyota Corolla" />
                            <TextBlock Text="Иванов Иван" Foreground="#4D5A6A"/>
                            <TextBlock Text="+7 (999) 555-44-33" Foreground="#4D5A6A"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>